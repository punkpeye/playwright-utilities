{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "lib": ["DOM"],
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "useUnknownInCatchVariables": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "strict": true,
    "target": "es2018"
  },
  "exclude": ["dist", "node_modules"],
  "include": ["src"]
}
